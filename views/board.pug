extends layout

block content
  h1= title
  p parameters
  if query
    p rows= #{query.rows}, cols= #{query.cols}
  
  - const rows = Number(query.rows);
  - const col = Number(query.cols);

  
  if (!Number.isInteger(rows) || !Number.isInteger(col))
    p  values for rows and cols are not valid integers.

  else if (rows < 1 || rows > 10)
    p Number of rows is out of the  range (1 to 10).

  else if (col < 1 || col > 10)
    p Number of columns is out of the  range (1 to 10).

  else
   
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#row
          - for (let j = 0; j < col; j++)
            - let Valueofcell = 0;

            - if (i === j)
              - Valueofcell = 1;
            - else if (i === j + 1)
              - Valueofcell = 2;
            - else if (i === j - 1)
              - Valueofcell = i;

            td= Valueofcell



  


