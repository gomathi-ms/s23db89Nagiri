extends layout

block content
  h1= title
  - let Teaid = toShow._id
  - let Tea_flavour = toShow.Tea_flavour
  - let Tea_cost = toShow.Tea_cost
  - let Tea_quantity = toShow.Tea_quantity

  div.row(class='mb-2')
    div.mr-1 ID is
    div #{Teaid}

  - let actionid = "/resource/teas/" + Teaid
  form(id='TeaForm', action= actionid, method="PUT")
    div.form-group
      label.TeaAttr(for='Tea_flavour') Tea flavour
      input#Tea_flavour(type='text', name='Tea_flavour', value= Tea_flavour )

    div.form-group
      label.TeaAttr(for='Tea_cost') Tea cost
      input#Tea_cost(type='text', name='Tea_cost', value= Tea_cost )

    div.form-group
      label.TeaAttr(for='Tea_quantity') Tea quantity
      input#Tea_quantity(type='number', name='Tea_quantity', value= Tea_quantity )

    input(type="submit")

  script.
    document.forms['TeaForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      
      // TODO: do something here to show the user that the form is being submitted
      
      fetch(event.target.action, {
        method: 'PUT',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Update succeeded");
        // TODO: handle the body
      }).catch((error) => {
        // TODO: handle the error
        alert("Update failed: " + error);
      });
    });
